<resources>

  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">0dp</item>
  </style>

  <style name="ButtonsDimensions">
    <item name="layout_constraintDimensionRatio">1:1</item>
    <item name="layout_constraintWidth_percent">.25</item>
    <item name="android:textSize">@dimen/buttonTextSize</item>
    <item name="android:textColor">@color/textColor</item>
  </style>

  <style name="ButtonNumbers" parent="ButtonsDimensions">
    <item name="android:backgroundTint">@color/colorButtonNumbers</item>
  </style>

  <style name="ButtonTop" parent="ButtonsDimensions">
    <item name="android:backgroundTint">@color/colorButtonTop</item>
  </style>

  <style name="ButtonRight" parent="ButtonsDimensions">
    <item name="android:backgroundTint">@color/colorButtonRight</item>
  </style>

  <style name="displayNumber">
    <item name="android:textColor">@color/textColor</item>
    <item name="android:textSize">@dimen/displayTextSize</item>
  </style>

  <style name="ButtonNumbersLandscape" parent="ButtonNumbers">
    <item name="layout_constraintWidth_percent">.1</item>
  </style>

  <style name="ButtonTopLandscape" parent="ButtonTop">
    <item name="layout_constraintWidth_percent">.1</item>
    <item name="textAllCaps">false</item>
  </style>

  <style name="ButtonRightLandscape" parent="ButtonRight">
    <item name="layout_constraintWidth_percent">.1</item>
  </style>

  <style name="displayNumberLandscape" parent="displayNumber">
    <item name="android:textSize">@dimen/displayTextSizeLandscape</item>
  </style>
</resources>
